{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++ build active file",
            "command": "/usr/local/bin/clang++",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "-O3",
                "main",
                "`llvm-config --cxxflags --ldflags --libs --system-libs`",
                "-w",
                "-pthread",
                "*.cpp"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}