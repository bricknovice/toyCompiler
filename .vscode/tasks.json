{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++ build active file",
            "command": "/usr/local/bin/g++",
            "args": [
                "-g",
                "${fileDirname}/*.cpp",
                "-O3",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}",
                "`llvm-config --cxxflags --ldflags --system-libs --libs`",
                "-w",
                "-pthread",
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger.",
        }
    ],
    "version": "2.0.0"
}